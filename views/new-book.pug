extends layout

block content
  h1 New Book

  form(method='post' action='/books/new')
    if (errors)
      h2.error Oooops!
      ul.error
        each error in errors
          li= error.message

    p
      label(for='title') Title
      input#title(type='text' name='title' required)

    p
      label(for='author') Author
      input#author(type='text' name='author' required)

    p
      label(for='genre') Genre
      input#genre(type='text' name='genre')

    p
      label(for='year') Year
      input#year(type='text' name='year')

    p
      input(type='submit' value='Create New Book')

    p
      a.button(href='/books') Cancel

