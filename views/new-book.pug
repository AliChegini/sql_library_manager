// New book form view

extends layout

block content
  h1 New Book
  form(method='post' action='/books/new')
    if error
      h2.error Oooops!
      ul.error
        each err in error.errors
          li= err.msg
    p
      label(for='title') Title
      input(name='title', type='text', id='title')
    p
      label(for='author') Author
      input(name='author', type='text', id='author')
    p
      label(for='genre') Genre
      input(name='genre', type='text', id='genre')
    p
      label(for='year') Year
      input(name='year', type='text', id='year')
    p
      button(type='submit') Create New Book
    p
      a.button(href='/books') Cancel

